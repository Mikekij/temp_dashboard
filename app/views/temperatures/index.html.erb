<p id="notice"><%= notice %></p>

<h1>Temperatures</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Thermometer</th>
      <th>Temperature C</th>
      <th>Temperature F</th>
      <th>Measurement Time</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @temperatures.each do |temperature| %>
      <tr>
        <td><%= temperature.thermometer.name %></td>
        <td><%= number_with_precision(temperature.temperature_c, :precision => 1) %></td>
        <td><%= number_with_precision(temperature.temperature_f, :precision => 1) %></td>
        <td><%= temperature.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%I:%M %h %d, %Y") %></td>
        <td><%= link_to 'Destroy', temperature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

